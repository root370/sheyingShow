generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exhibition {
  id           String   @id @default(uuid())
  title        String
  cover        String
  year         String
  photoCount   Int      @default(0)
  description  String
  top          String
  left         String
  rotate       String
  borderRadius String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  photos       Photo[]
}

model Photo {
  id           String      @id @default(uuid())
  src          String
  alt          String
  caption      String
  aspectRatio  String
  color        String
  annotations  Annotation[]
  exhibition   Exhibition? @relation(fields: [exhibitionId], references: [id])
  exhibitionId String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Annotation {
  id        String   @id @default(uuid())
  x         Float
  y         Float
  text      String
  photo     Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  photoId   String
}
